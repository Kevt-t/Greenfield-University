<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Instructor Dashboard | Greenfield University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Welcome, <%= user.email %>!</h2>
        <p class="text-muted text-center">Instructor Dashboard</p>

        <!-- Courses Taught -->
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                Your Courses
            </div>
            <ul class="list-group list-group-flush">
                <% if (courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <li class="list-group-item"><strong><%= course.name %></strong> - <%= course.code %></li>
                    <% }) %>
                <% } else { %>
                    <li class="list-group-item text-muted">You are not assigned to any courses.</li>
                <% } %>
            </ul>
        </div>

        <!-- Enrolled Students -->
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                Students Enrolled
            </div>
            <ul class="list-group list-group-flush">
                <% if (students.length > 0) { %>
                    <% students.forEach(student => { %>
                        <li class="list-group-item"><%= student.name %> - <%= student.email %></li>
                    <% }) %>
                <% } else { %>
                    <li class="list-group-item text-muted">No students enrolled yet.</li>
                <% } %>
            </ul>
        </div>

        <!-- Post Announcement -->
        <div class="card mt-4">
            <div class="card-header bg-warning text-dark">
                Post an Announcement
            </div>
            <div class="card-body">
                <form action="/instructor/announcement" method="POST">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="announcement" placeholder="Enter announcement..." required>
                    </div>
                    <button type="submit" class="btn btn-warning w-100">Post</button>
                </form>
            </div>
        </div>

        <!-- Logout Button -->
        <div class="text-center mt-4">
            <form action="/auth/logout" method="POST">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>